doctype html
html(lang="en", ng-app='ngdualshock')
    head
        title ng-dualshock Examples
        link(rel='stylesheet', href='/css/style.css')
        script(type='text/javascript', src='http://localhost:8082/socket.io/socket.io.js')
    body
        div(ds-button, key='square') SQUARE {{pressed | json}}
        div(ds-button, key='triangle') TRIANGLE {{pressed | json}}
        div(ds-button,key='circle') CIRCLE {{pressed | json}}
        div(ds-button, key='x') X {{pressed | json}}

        div(ds-analog, key='left')
            .knob(style='top: {{getPercentile().y}}%; left: {{getPercentile().x}}%;')
            span {{getValue()}}
        //div(ds-analog, key='right')
        //  .knob(style='top: {{getPercentile().y}}%; left: {{getPercentile().x}}%;')

        div(ds-motion, key='rightLeft')
            .knob(style='{{getStyle()}}')

        div(ds-button, key='l1') L1 {{pressed | json}}
        div(ds-button, key='l2') L2 {{pressed | json}}

        div(ds-button, key='r1') R1 {{pressed | json}}
        div(ds-button, key='r2') R2 {{pressed | json}}

        div(ds-button, key='select') select {{pressed | json}}
        div(ds-button, key='start') start {{pressed | json}}

        script(type='text/javascript', src='/vendor/angular/angular.js')
        script(type='text/javascript', src='/vendor/angular-socket-io/socket.js')
        script(type='text/javascript', src='/js/app.js')
        script(type='text/javascript', src='/js/directive/ds-motion.js')
